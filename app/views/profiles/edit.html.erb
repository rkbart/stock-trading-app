<%= turbo_frame_tag "profile_modal" do %>
  <div class="fixed inset-0 backdrop-blur-sm bg-white/10 flex items-center justify-center z-50">
    <div class="bg-gray-800 rounded-lg shadow-xl w-full max-w-md mx-auto p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-white">Complete Your Profile</h2>
        <%= link_to root_path, class: "text-gray-400 hover:text-gray-300", data: { turbo_frame: "_top" } do %>
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>

      <%= form_with model: @user, url: profile_path, method: :patch, data: { turbo: false } do |form| %>
        <div class="mb-4">
          <%= form.label :first_name, value: @user.first_name, class: "block text-sm font-medium text-white mb-1" %>
          <%= form.text_field :first_name, class: "block w-full px-3 py-2 bg-gray-900 text-white rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <% if @user.errors[:first_name].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :last_name, class: "block text-sm font-medium text-white mb-1" %>
          <%= form.text_field :last_name, class: "block w-full px-3 py-2 bg-gray-900 text-white rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <% if @user.errors[:last_name].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :birthday, class: "block text-sm font-medium text-white mb-1" %>
          <%= form.date_field :birthday, class: "block w-full px-3 py-2 bg-gray-900 text-white rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <% if @user.errors[:birthday].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :gender, class: "block text-sm font-medium text-white mb-1" %>
          <%= form.select :gender, options_for_select(["Male", "Female", "Other"], @user.gender), {}, class: "block w-full px-3 py-2 bg-gray-900 text-white rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <% if @user.errors[:gender].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>

        <div class="mb-4">
          <%= form.label :address, class: "block text-sm font-medium text-white mb-1" %>
          <%= form.text_area :address, rows: 3, class: "block w-full px-3 py-2 bg-gray-900 text-white rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
          <% if @user.errors[:address].any? %>
            <p class="text-red-500 text-sm mt-1"><%= @user.errors[:first_name].first %></p>
          <% end %>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <%= link_to "Cancel", root_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "Update Profile", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-gray-900 bg-indigo-400 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
