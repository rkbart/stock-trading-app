<div class="pt-20 min-h-screen bg-gray-800 text-white px-6">
  <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-10 items-start">
    <!-- Hero Section -->
    <div class="space-y-4">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight">
        Master the Market, One Trade at a Time
      </h1>
      <p class="text-lg md:text-xl text-gray-300">
        Explore, invest, and grow your portfolio with <strong>RailsTrade</strong>.
      </p>

      <!-- Balance / Holdings Section -->
      <div class="mt-6 bg-gray-700 p-4 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold">Total Holdings</h2>
        <p class="text-gray-200 mt-2">Balance: <%= number_to_currency(@balance) %></p>
        <!-- You can loop through your holdings here -->
      </div>
    </div>

    <!-- Stock Listings -->
    <div class="bg-white text-gray-800 rounded-lg shadow-md p-6 h-full overflow-auto">
      <h2 class="text-2xl font-semibold mb-4">Stock Listings</h2>
      <table class="w-full table-auto text-left">
        <thead>
          <tr class="border-b">
            <th class="py-2">Symbol</th>
            <th class="py-2">Company</th>
            <th class="py-2">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %> 
            <tr>
              <td class="py-2"><%= stock[:symbol]%></td>
              <td><%= stock[:name] %></td>
              <td>$<%= stock[:price]%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
