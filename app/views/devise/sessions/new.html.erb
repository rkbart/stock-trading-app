
<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="max-w-md bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "block w-full border border-gray-400 bg-gray-50 rounded-md px-4 py-2 focus:outline-none focus:ring focus:ring-blue-400" %>


      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring focus:ring-blue-400" %>
      </div>

      <div>
        <%= f.submit "Log in", class: "w-full bg-gray-800 text-white py-2 rounded-md hover:bg-gray-700 transition" %>
      </div>
    <% end %>

    <div class="text-center mt-4 text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
