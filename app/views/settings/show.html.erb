<div id="user-settings" class="max-w-3xl mx-auto mt-6 p-6 bg-gray-700 shadow-lg rounded-xl">
  <!-- Title -->
  <div class="mb-6">
    <h2 class="text-2xl font-semibold text-white">User Settings</h2>
  </div>

  <!-- Role Switch Form -->
  <div class="mt-6 bg-gray-100 p-4 rounded-lg shadow-md">
    <div class="flex justify-start items-center mb-4">
      <h3 class="text-lg font-medium text-gray-700">Change User Role (<%= @user.role.titleize %>)</h3>
    </div>

    <%= form_with(model: @user, url: change_role_user_path(@user), method: :patch, local: true) do |form| %>
      <div class="flex justify-between items-center space-x-4">
        <div class="flex-1">
          <%= form.label :role, "Role", class: "block text-sm font-medium text-gray-600" %>
          <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, 
              {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-sm cursor-pointer py-2 px-2" %>
        </div>
        <%= form.submit "Update Role", class: "bg-yellow-400 text-white px-4 py-2 rounded-md hover:bg-yellow-500 transition cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
