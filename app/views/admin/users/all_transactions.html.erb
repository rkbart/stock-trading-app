<div class="mt-6 mx-10 bg-white py-6 rounded-lg shadow-lg px-6">
  <table class="w-full table-auto text-left text-gray-800">
    <thead>
      <tr class="border-b border-gray-300">
        <th class="py-3 text-lg font-semibold text-indigo-700">Transaction</th> 
        <th class="py-3 text-lg font-semibold text-indigo-700">Symbol</th>
        <th class="py-3 text-lg font-semibold text-indigo-700">Shares</th>
        <th class="py-3 text-lg font-semibold text-indigo-700">Price</th>
        <th class="py-3 text-lg font-semibold text-indigo-700">Total</th>
        <th class="py-3 text-lg font-semibold text-indigo-700">Date</th>
        <th class="py-3 text-lg font-semibold text-indigo-700">User</th>
      </tr>
    </thead>
    <tbody>
      <% @all_transactions.each do |tx| %>
        <tr class="border-b border-gray-200 hover:bg-indigo-50 transition duration-200">
          <td class="py-3 pl-8 font-semibold <%= ['buy', 'deposit'].include?(tx.transaction_type) ? 'text-green-600' : 'text-red-600' %>">
            <%= tx.transaction_type.capitalize %>
          </td>
          <td class="py-3"><%= tx.symbol %></td>
          <td class="py-3 text-left pl-4"><%= tx.quantity? ? tx.quantity : '-' %></td>
          <td class="py-3">$<%= number_with_precision(tx.buy_price, precision: 2) %></td>
          <td class="py-3">$<%= number_with_precision(tx.total_amount, precision: 2) %></td>
          <td class="py-3"><%= tx.transaction_date.strftime('%b %d, %Y') %></td>
          <td class="py-3"><%= tx.user.email %></td>
        </tr>
      <% end %>

      <% if @all_transactions.empty? %>
        <tr>
          <td colspan="7" class="py-6 text-center text-gray-500">No transactions found</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
