<div class="flex flex-col items-center justify-center max-w-3xl mx-auto mt-6 p-8 bg-gray-700 rounded-2xl shadow-xl">
  <div class="w-full flex items-center justify-between mb-8">
    <h1 class="text-3xl md:text-4xl font-semibold text-white">
      Trader's Profile <i class="fa-regular fa-address-card"></i>
    </h1>
    <%= link_to edit_admin_user_path, class: "text-indigo-300 hover:text-indigo-200 transition" do %>
      <i class="fa-solid fa-pen-to-square text-2xl cursor-pointer"></i>
    <% end %>
  </div>

  <!-- Profile Info Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full">
    <!-- Name -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-user mr-2"></i>Name</h2>
      <p class="text-white text-lg mt-1"><%= @user.first_name %> <%= @user.last_name %></p>
    </div>

    <!-- Email -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-envelope mr-2"></i>Email</h2>
      <p class="text-white text-lg mt-1"><%= @user.email %></p>
    </div>

    <!-- Birthday -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-cake-candles mr-2"></i>Birthday</h2>
      <p class="text-white text-lg mt-1"><%= @user.birthday.strftime("%B %d, %Y") %></p>
    </div>

    <!-- Gender -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-venus-mars mr-2"></i>Gender</h2>
      <p class="text-white text-lg mt-1"><%= @user.gender %></p>
    </div>

    <!-- Address -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-location-pin mr-2"></i>Address</h2>
      <p class="text-white text-lg mt-1"><%= @user.address %></p>
    </div>

    <!-- Role -->
    <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
      <h2 class="text-lg font-semibold text-indigo-300"><i class="fa-solid fa-user-tie mr-2"></i>Role</h2>
      <p class="text-white text-lg mt-1"><%= @user.role.capitalize %></p>
    </div>
  </div>

  <!-- Back Button -->
  <div class="w-full mt-8 flex justify-end">
    <%= link_to "â† Back to Traders List", show_all_traders_admin_users_path,
        class: "bg-indigo-600 hover:bg-indigo-500 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-300 ease-in-out" %>
  </div>
</div>
