<div class="flex flex-col items-center  min-h-screen bg-gray-900 p-6">
  <h1 class="text-2xl font-bold mb-6 text-white text-center">Pending Trader Approvals</h1>

  <table class="min-w-full bg-white rounded shadow-md">
    <thead class="bg-gray-800 text-white">
      <tr>
        <th class="py-3 px-6 text-left">Email</th>
        <th class="py-3 px-6 text-left">Status</th>
        <th class="py-3 px-6 text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @pending_users.each do |user| %>
        <tr class="border-t">
          <td class="py-2 px-6"><%= user.email %></td>
          <td class="py-2 px-6 capitalize"><%= user.status %></td>
          <td class="py-2 px-6 flex justify-center space-x-2">
            <%= button_to "Approve", approve_admin_user_path(user), method: :patch, class: "bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600" %>
            <%= button_to "Reject", reject_admin_user_path(user), method: :patch, class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
