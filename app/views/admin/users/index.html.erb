<h1 class="text-2xl font-bold mb-4">Pending Trader Approvals</h1>

<table class="min-w-full bg-white rounded shadow">
  <thead class="bg-gray-800 text-white">
    <tr>
      <th class="py-2 px-4 text-left">Email</th>
      <th class="py-2 px-4 text-left">Status</th>
      <th class="py-2 px-4">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pending_users.each do |user| %>
      <tr class="border-t">
        <td class="py-2 px-4"><%= user.email %></td>
        <td class="py-2 px-4 capitalize"><%= user.status %></td>
        <td class="py-2 px-4 text-center">
          <%= button_to "Approve", approve_admin_user_path(user), method: :patch, class: "bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
