<div class="flex items-center justify-center min-h-screen bg-gray-700">
  <div class="bg-white p-8 rounded-2xl shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Invite a Trader</h2>

    <%= form_with url: send_invite_admin_users_path, method: :post, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :email, "Trader's Email", class: "block text-gray-700 text-sm font-semibold mb-2" %>
        <%= form.email_field :email, required: true, class: "w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex justify-center">
        <%= form.submit "Send Invite", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>