<div class="min-h-screen bg-gray-900 flex flex-col items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-2xl bg-gray-800 rounded-2xl shadow-lg p-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-white">Edit Trader Profile</h2>
      <%= link_to admin_user_path(@user), class: "text-gray-400 hover:text-gray-300" do %>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>

    <%= form_with model: @user, url: admin_user_path(@user), method: :patch, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :first_name, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.text_field :first_name, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :last_name, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.text_field :last_name, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :birthday, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.date_field :birthday, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :gender, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.select :gender, options_for_select(["Male", "Female", "Other"], @user.gender), {}, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :address, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.text_area :address, rows: 3, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :role, class: "block text-sm font-medium text-white mb-1" %>
        <%= form.select :role, options_for_select(["trader", "admin"], @user.role), {}, class: "block w-full px-3 py-2 bg-gray-900 text-white border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="flex justify-end space-x-4 pt-6">
        <%= link_to "Cancel", admin_user_path(@user), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit "Update Profile", class: "bg-indigo-600 hover:bg-indigo-500 text-white font-semibold py-2 px-5 rounded-lg shadow transition duration-300 ease-in-out cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
