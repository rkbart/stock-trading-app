<div class="pt-20 min-h-screen bg-gray-800 text-white px-6">
  <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-10 items-start">
    <!-- Hero Section -->
    <div class="space-y-4">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight">
        Master the Market, One Trade at a Time
      </h1>
      <p class="text-lg md:text-xl text-gray-300">
        Explore, invest, and grow your portfolio with <strong>RailsTrade</strong>.
      </p>

      <!-- Balance / Holdings Section -->
      <div class="mt-8 bg-gradient-to-r from-blue-500 to-teal-600 p-6 rounded-lg shadow-lg">
        <h2 class="text-3xl font-extrabold text-white">Total Assets</h2>
        <div class="mt-4 flex items-center justify-between">
          <p class="text-lg text-gray-100">Balance (In Stocks):</p>
          <p class="text-2xl font-bold text-white">
            <%= number_to_currency(@total_holdings_value) %>
          </p>
        </div>

        <!-- Additional Balance Information -->
        <div id="balance">
          <%= render partial: "shared/balance", locals: { balance: @balance } %>
        </div>
      </div>
    </div>

    <!-- Stock Listings -->
    <div class="bg-gray-800 text-white rounded-lg shadow-md p-6 h-full overflow-auto">
      <h2 class="text-2xl font-semibold mb-4 text-yellow-400 flex items-center">
        Stock Listings &nbsp;<i class="fa-solid fa-chart-line text-yellow-400"></i>
      </h2>
      <table class="w-full table-auto text-left">
        <thead>
          <tr class="border-b border-gray-600">
            <th class="py-2 text-white">Symbol</th>
            <th class="py-2 text-white">Company</th>
            <th class="py-2 text-white">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %> 
            <tr class="border-b border-gray-700 hover:bg-gray-700 transition">
              <td class="py-4 text-green-500"><%= stock[:symbol] %></td>
              <td class="py-4 text-gray-300"><%= stock[:name] %></td>
              <td class="py-4 text-yellow-400">$<%= stock[:price] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
