<div class="mt-6 mx-10 bg-gradient-to-r from-gray-800 to-gray-700 py-6 rounded-lg shadow-lg px-6">
  <table class="w-full table-auto text-left text-gray-200">
    <thead>
      <tr class="border-b border-gray-600">
        <th class="py-3 text-lg font-semibold">Transaction</th> 
        <th class="py-3 text-lg font-semibold">Symbol</th>
        <th class="py-3 text-lg font-semibold">Shares</th>
        <th class="py-3 text-lg font-semibold">Price</th>
        <th class="py-3 text-lg font-semibold">Total</th>
        <th class="py-3 text-lg font-semibold">Date</th>
        <th class="py-3 text-lg font-semibold">Time</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |tx| %>
        <tr class="border-b border-gray-600 hover:bg-gray-700 transition duration-200">
          <td class="py-3 font-semibold <%= ['buy', 'deposit'].include?(tx.transaction_type) ? 'text-green-400' : 'text-red-400' %>">
            <%= tx.transaction_type&.capitalize %>
          </td>
          <td class="py-3"><%= tx.symbol %></td>
          <td class="py-3 text-left pl-4"><%= tx.quantity? ? tx.quantity : '-' %></td>
          <td class="py-3">$<%= number_with_precision(tx.buy_price, precision: 2) %></td>
          <td class="py-3">$<%= number_with_precision(tx.total_amount, precision: 2) %></td>
          <td class="py-3"><%= tx.transaction_date.strftime('%b %d, %Y') %></td>  
          <td class="py-3"><%= tx.created_at.strftime('%I:%M %p') %></td>
        </tr>
      <% end %>

      <% if @transactions.empty? %>
        <tr>
          <td colspan="7" class="py-6 text-center text-gray-400">No transactions found</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
